{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['github>bfra-me/renovate-config#v2.2.3', 'github>bfra-me/renovate-config:automerge/prForCI#v2.2.3'],
  packageRules: [
    {
      matchPackageNames: ['@types/node', 'node', 'nodejs/node'],
      allowedVersions: '< 17',
    },
  ],
  postUpgradeTasks: {
    commands: ['yarn install --immutable', 'yarn run build', 'yarn prettier --write .'],
    executionMode: 'branch',
  },
}
